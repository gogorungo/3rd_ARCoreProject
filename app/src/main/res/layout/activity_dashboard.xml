<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_page"
    tools:context=".DashboardActivity">

    <!-- 로그인 후 페이지 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/muteBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="15dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/music_icon" />
        <!-- 기존 음소거 아이콘 -->
        <!--<ImageButton
            android:id="@+id/muteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/music_note" />-->

        <ImageButton
            android:id="@+id/namechg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="15dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/main_user" />

        <ImageButton
            android:id="@+id/gorecord"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="15dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/main_record" />

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/main_logout" />

        <!---<Button
            android:id="@+id/namechg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="15dp"
            android:text="닉네임" />

        <Button
            android:id="@+id/button1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/namechg"
            android:layout_centerHorizontal="true"
            android:text="로그아웃" /> -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <android.widget.Button
            android:id="@+id/StartBtn"
            android:layout_width="157dp"
            android:layout_height="130dp"
            android:layout_below="@+id/button1"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_round_thin"
            android:fontFamily="@font/fontstyle"
            android:text="시작하기"
            android:textColor="#3E9CFC"
            android:textSize="30dp" />

        <android.widget.Button
            android:id="@+id/EndBtn"
            android:layout_width="158dp"
            android:layout_height="130dp"
            android:layout_below="@+id/StartBtn"
            android:layout_marginTop="50dp"
            android:background="@drawable/border_round_thin"
            android:fontFamily="@font/fontstyle"
            android:text="게임종료"
            android:textColor="#3E9CFC"
            android:textSize="30dp" />

    </LinearLayout>


</RelativeLayout>